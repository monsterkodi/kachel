borderTopColor      = #1c1c1c
bgColor             = #181818
borderBotColor      = #141414
bgHover             = #161616
bgFocus             = #202020
frameColor          = #111111

scrollHoverColor    = #b00
titleRedColor       = #f00
titleColor          = #333
scrollColor         = #444
textBlurColor       = #666
textActiveColor     = #999
textFocusColor      = #fff

body
    &:not(.kachelFocus)
        animation-name      noFocusFrame
        animation-duration  0.2s
        
        background-color        bgColor    
        border-top-color        borderTopColor
        border-left-color       borderTopColor
        border-right-color      borderBotColor
        border-bottom-color     borderBotColor
        
        & #main:not(.noFrame)
            background-color    bgColor
            animation-name      noFocusBackground
            animation-duration  0.2s
    
    &.kachelHover
        background-color    bgHover
        border-top-color    borderTopColor
        border-left-color   borderTopColor
        border-right-color  borderBotColor
        border-bottom-color borderBotColor
        & #main:not(.noFrame)
            background-color     bgHover
    
    &.kachelFocus
        animation-name      focusFrame
        animation-duration  0.4s
        background-color    bgFocus
        border-top-color    #555
        border-left-color   #555
        border-right-color  #000
        border-bottom-color #000
        & #main:not(.noFrame)
            background-color    bgFocus
            animation-name      focusBackground
            animation-duration  0.4s
                
@keyframes focusFrame
    from  
        background-color    bgColor
        border-top-color    borderTopColor
        border-left-color   borderTopColor
        border-right-color  borderBotColor
        border-bottom-color borderBotColor
    to    
        background-color    bgFocus
        border-top-color    #555
        border-left-color   #555
        border-right-color  #000
        border-bottom-color #000
        
@keyframes focusBackground
    from  
        background-color    bgColor
    to    
        background-color    bgFocus

@keyframes noFocusFrame
    from  
        background-color    bgFocus
        border-top-color    #555
        border-left-color   #555
        border-right-color  #000
        border-bottom-color #000
    to    
        background-color    bgColor
        border-top-color    borderTopColor
        border-left-color   borderTopColor
        border-right-color  borderBotColor
        border-bottom-color borderBotColor
        
@keyframes noFocusBackground
    from  
        background-color    bgFocus
    to    
        background-color    bgColor
        
