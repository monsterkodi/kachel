bgColor             = #181818
frameColor          = #222
scrollHoverColor    = #b00
titleRedColor       = #f00
titleColor          = #333
scrollColor         = #444
textBlurColor       = #666
textActiveColor     = #999
textFocusColor      = #fff

#main
    background          bgColor
    
// 00     00  00000000  000   000  000   000  
