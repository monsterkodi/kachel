.menuItem
    -webkit-app-region  no-drag
    
.menu
    height              titlebarHeight
    pointer-events      auto
    -webkit-app-region  drag
    flex                1 1 0
    display             flex
    flex-direction      row
    
.menuItem
    -webkit-app-region  no-drag
    cursor              pointer
    padding-left        10px
    padding-right       10px
    padding-top         7px
    display             inline-block
    height              titlebarHeight
    overflow            visible
            
