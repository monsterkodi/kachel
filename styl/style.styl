.grid2x2
    display             grid
    grid-template-columns 50% 50%
    grid-template-rows   50% 50%
    width               100%
    height              100%

.grid2x2_11
.grid2x2_12
.grid2x2_21
.grid2x2_22
    margin              auto
    width               80%
    height              80%

.grid2x2_11
    grid-column         1
    grid-row            1

.grid2x2_12
    grid-column         2
    grid-row            1

.grid2x2_21
    grid-column         1
    grid-row            2
    
.grid2x2_22
    grid-column         2
    grid-row            2
    
