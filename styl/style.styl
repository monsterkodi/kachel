frameWidth      = 4%
fontMono        = "Meslo LG S", "Liberation Mono", "Menlo", "Cousine", "Andale Mono", monospace
titlebarFont    = Bahnschrift Light, Ebrima, Varela Round, Arial Rounded MT Bold, Helvetica, Arial

fill-abs()
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0

