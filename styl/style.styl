*
    outline-width       0
    line-height         1
    box-sizing          border-box

body
    fill-abs()
    margin              0
    border-style        solid
    border-radius       4.2px
    border-width        0.5px
    box-sizing          border-box
    font-family         fontMono
    font-size           15px
    overflow            hidden
    -webkit-user-select none
    
#main
    position            absolute
    left                frameWidth
    right               frameWidth
    top                 frameWidth
    bottom              frameWidth
    overflow            hidden
    pointer-events      all
    display             flex

    &.noFrame
        left            0
        right           0 
        top             0
        bottom          0
        border-radius   4.2px
    
svg
    display             block

.histCanvas
    position            absolute
    
