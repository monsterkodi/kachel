.alarm-digits
    padding-top     5%
    position        relative
    left            50%
    line-height     1
    transform       translateX(-50%)
    text-align      center
    
.alarm-hour
.alarm-minute
    display         inline-block
    font-size       32vh
    font-family     clockFont
    
.alarm-minute
    &:before
        content         ':'
        padding-right   7%
        
.alarm-second
    align           center
    display         block
    font-size       55vh
    font-family     clockFont
    
.volume
.clock
.alarm
.chain
    width               100%
    height              100%
    
.overlay
    fill-abs()
    
.trashDot
    fill                #080
    
.face
    stroke-width        2
   
.volmrk
.minmrk
    stroke-linecap      round
    stroke-width        2 
    
.hour   
    stroke-linecap      round
    stroke-width        3 
    
.minute 
    stroke-linecap      round
    stroke-width        2 
    
.second 
    stroke-linecap      round
    stroke-width        1 
    
