*
    outline-width       0

body
    fill-abs()
    margin              0
    font-family         fontMono
    font-size           15px
    overflow            hidden
    -webkit-user-select none
    
#main
    -webkit-app-region  drag
    position            absolute
    left                frameWidth
    right               frameWidth
    top                 frameWidth
    bottom              frameWidth
    scroll              none
    overflow            hidden
    pointer-events      auto
    display             flex
    
.kachelImg
    margin              auto
    width               70%
    height              70%
    
