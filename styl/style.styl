*
    outline-width       0

body
    fill-abs()
    margin              0
    font-family         fontMono
    font-size           15px
    overflow            hidden
    -webkit-user-select none
    
#main
    position            absolute
    left                frameWidth
    right               frameWidth
    top                 frameWidth
    bottom              frameWidth
    scroll              none
    overflow            hidden
    pointer-events      all
    display             flex

svg
    display             block

.clock
    width               100%
    height              100%
    
.face
    stroke              #333 
    fill                #222
    stroke-width        2
    
.major
    stroke-linecap      round
    stroke              #333 
    stroke-width        2 
    
.hour   
    stroke-linecap      round
    stroke              #888 
    stroke-width        3 
    
.minute 
    stroke-linecap      round
    stroke              #555 
    stroke-width        2 
    
.second 
    stroke-linecap      round
    stroke              #333 
    stroke-width        1 
    
.kachelImg
    margin              auto
    width               70%
    height              70%
    cursor              pointer
    
.applicon
    margin              auto
    width               80%
    height              80%
    cursor              pointer
        
.foldername
    position            absolute
    font-size           10px
    font-family         Bahnschrift Light, Helvetica Neue, Ebrima, Varela Round, Helvetica, Arial
    left                0
    right               0
    bottom              0
    text-align          center
    color               white
    
